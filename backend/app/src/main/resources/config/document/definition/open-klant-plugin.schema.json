{
  "$id": "open-klant-plugin.schema",
  "type": "object",
  "title": "Open Klant Plugin",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "klantcontact": {
      "type": "object",
      "properties": {
        "taal": {
          "type": "string"
        },
        "inhoud": {
          "type": "string"
        },
        "kanaal": {
          "type": "string"
        },
        "onderwerp": {
          "type": "string"
        },
        "betrokkene": {
          "type": "object",
          "properties": {
            "voornaam": {
              "type": "string"
            },
            "achternaam": {
              "type": "string"
            },
            "partijUuid": {
              "type": "string"
            },
            "voorletters": {
              "type": "string"
            },
            "voorvoegselAchternaam": {
              "type": "string"
            }
          }
        },
        "hasBetrokkene": {
          "type": "boolean"
        },
        "vertrouwelijk": {
          "type": "boolean"
        },
        "plaatsgevondenOp": {
          "type": "string"
        }
      }
    },
    "isKlantcontact": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}